<h1>Car Registration</h1>
  <div class="allcarregistrations">
    <% @car_registrations.each do |carregistration| %>
      <div class="card border-dark mb-3 ml-3" style="max-width: 100rem;">
        <div class="card-body text-dark text-center">
          <%= carregistration.user.first_name %> <p>wants to register his car</p>
          <%= link_to "View Form", root_path, class:"btn btn-primary btn-blue" %>
        </div>
      </div>
    <% end %>
  </div>

