<% if @general_question.question_approved == "Validate" %>
<div class="container">
  <div class="card text-white bg-dark mb-4 mt-4">
    <div class="card-body">
      <h1>Client</h1>
      <p class="card-text border-bottom border-success"><strong>General Question</strong> </p>
      <p class="card-text"><strong>First name:</strong> <%= @user.first_name %> </p>
      <p class="card-text"><strong>Last name:</strong> <%= @user.last_name %> </p>
    </div>
    <div class="card-body">
      <p class="card-text border-bottom border-success"><strong>Your request  <%= @general_question.request_number %> has been validated! </strong> </p>
      <p> <%= @general_question.answer %> </p>
    </div>
    <%= link_to "Home", root_path, class:"btn90 fa fa-home rounded"%>
  </div>
</div>


<% else %>
<div class="container">
  <div class="card text-white bg-dark mb-4 mt-4">
    <div class="card-body">
      <h1>Client</h1>
      <p class="card-text border-bottom border-danger"><strong>General Question</strong> </p>
      <p class="card-text"><strong>First name:</strong> <%= @user.first_name %> </p>
      <p class="card-text"><strong>Last name:</strong> <%= @user.last_name %> </p>
    </div>
    <div class="card-body">
      <p class="card-text border-bottom border-danger"><strong>Your request  <%= @general_question.request_number %> has been rejected. </strong> </p>
      <p> <%= @general_question.answer %> </p>
      <%= link_to "General Question Form", new_general_question_path, class:"btn btn-outline-light"%>
    </div>
  </div>
</div>
<% end %>
